<%- include("partials/header") %>

<h2 class="text-3xl font-semibold text-blue-800 mb-6 text-center">Atividades Recentes</h2>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% atividades.forEach(a => { %>
    <div class="bg-white rounded-2xl p-5 shadow hover:shadow-lg transition">
      <h3 class="text-xl font-bold text-blue-700 mb-2"><%= a.titulo %></h3>
      <p class="text-gray-700 mb-3"><%= a.descricao %></p>
      <p class="text-sm text-gray-500"><strong>Data:</strong> <%= a.data %></p>
    </div>
  <% }) %>
</div>

<%- include("partials/footer") %>

